<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zhanweizifu" />

        <TextView
            android:id="@+id/item_article_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/zhanweizifu" />

        <TextView
            android:id="@+id/item_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_article_author"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="@string/zhanweizifu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_article_ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_article_title"
            android:layout_marginTop="10dp"
            android:text="é¡¶" />

        <TextView
            android:id="@+id/item_article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_article_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="@string/zhanweizifu" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>